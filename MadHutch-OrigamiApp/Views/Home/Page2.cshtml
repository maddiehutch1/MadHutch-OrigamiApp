@{
    ViewData["Title"] = "Try it Yourself";
}
<head>
    <style>
        .output-box {
            border: 1px solid #ccc;
            padding: 10px;
            width: 100px;
        }
    </style>
</head>
<div class="text-center">
    <h1 class="display-4" style="font-weight:bold">@ViewData["Title"]</h1>

    <h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:small; font-style:italic">Price Estimate for Origami Instruction</h3>
    <form method="POST" class="d-flex flex-column align-items-center" id="tutorEstimate">
        <label>Enter number of hours you would like to receive lessons:</label>
        <input type="number" id="numOfHours" name="numOfHours" />
        <br />
        <label>Cost per Hour</label>
        <input type="number" class="text-center" readonly id="costPerHour" name="costPerHour" value="10.00"/>
        <button type="button" class="btn btn-primary mt-3 text-center" id="calcBtn" >Calculate cost</button>
        <br />
        <div class="output-box align-self-center" contenteditable="false" id="totalOutput">
            <!-- here is where cost is displayed -->
        </div>
    </form>

</div>